<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="350dp">

    <ImageView
        android:id="@+id/recipe_teaser_preview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:contentDescription="@string/recipe_image"
        android:scaleType="fitXY"
        android:clickable="true"
        android:focusable="false"
        />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="top"
        android:src="@drawable/black_gradient_background" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignBottom="@id/recipe_teaser_preview"
        android:layout_alignLeft="@id/recipe_teaser_preview"
        android:layout_alignRight="@id/recipe_teaser_preview"
        android:layout_marginBottom="@dimen/material_16dp"
        android:orientation="horizontal"
        android:layout_alignStart="@id/recipe_teaser_preview">

        <TextView
            android:id="@+id/recipe_title"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:layout_marginLeft="@dimen/material_16dp"
            android:layout_marginRight="@dimen/material_16dp"
            android:clickable="true"
            android:focusable="false"
            android:maxLines="2"
            android:ellipsize="end"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/material_font_subheading"
            tools:text="Delicous Recipe" />

        <ImageButton
            android:id="@+id/recipe_teaser_favorite_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/material_16dp"
            android:layout_marginEnd="@dimen/material_24dp"
            android:contentDescription="@string/favorites_button"
            android:background="@android:color/transparent"
            android:focusableInTouchMode="false"
            android:tint="#E0E0E0"
            android:src="@mipmap/ic_favorite_border_black_24dp" />

        <ImageButton
            android:id="@+id/recipe_teaser_cart_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:contentDescription="@string/shopping_list_button"
            android:focusableInTouchMode="false"
            android:layout_marginEnd="@dimen/material_24dp"
            android:tint="#E0E0E0"
            card_view:srcCompat="@drawable/ic_shopping_cart"
            android:layout_marginRight="@dimen/material_24dp" />

    </LinearLayout>

</RelativeLayout>

