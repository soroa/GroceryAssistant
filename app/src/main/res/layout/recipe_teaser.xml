<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        card_view:cardCornerRadius="5dp">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/recipe_teaser_preview"
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:clickable="true"
                app:srcCompat="@color/cardview_dark_background" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_alignBottom="@id/recipe_teaser_preview"
                android:layout_alignLeft="@id/recipe_teaser_preview"
                android:layout_alignRight="@id/recipe_teaser_preview"
                android:background="#66000000"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/recipe_title"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_weight="5"
                    android:textColor="#ffffff"
                    android:textSize="25sp"
                    android:clickable="true"
                    tools:text="Title" />

                <ImageButton
                    android:id="@+id/recipe_teaser_favorite_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:tint="#ffffff"
                    android:layout_margin="15dp"
                    android:focusableInTouchMode="false"
                    android:background="@android:color/transparent"
                    card_view:srcCompat="@mipmap/ic_favorite_border_black_24dp" />

                <ImageButton
                    android:id="@+id/recipe_teaser_cart_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="15dp"
                    android:tint="#ffffff"
                    android:focusableInTouchMode="false"
                    android:background="@android:color/transparent"
                    card_view:srcCompat="@mipmap/ic_shopping_cart_black_24dp" />

            </LinearLayout>

        </RelativeLayout>
    </android.support.v7.widget.CardView>


</LinearLayout>


